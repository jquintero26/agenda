<!--
    Document   : agenda.xml
    Description:
        Estructura de la tabla agenda.
-->
<tabla>
<columna><nombre>id</nombre>
<tipo>serial</tipo>
<nulo>YES</nulo>
</columna>
<columna>
    <nombre>fecha</nombre>
    <tipo>datetime</tipo>
    <nulo>NO</nulo>
</columna>
<columna>
    <nombre>tarea</nombre>
    <tipo>text</tipo>
    <nulo>YES</nulo>
</columna>
<columna>
    <nombre>usuario</nombre>
    <tipo>varchar(12)</tipo>
    <nulo>YES</nulo>
</columna>
<columna>
    <nombre>completado</nombre>
    <tipo>boolean</tipo>
    <nulo>NO</nulo>
</columna>
<restriccion>
        <nombre>agenda_pkey</nombre>
        <consulta>PRIMARY KEY (id)</consulta>
</restriccion>

</tabla>
